.pops
	top 0
	left 0
	size(0)

.pop
	&-block
		position absolute
		top 0
		left 0
		width 100%
		min-height 100%
		z-index 999999
		overflow auto

		display none
		border-box()
		overflow hidden
		padding-bottom 100px

	&-bg
		position absolute
		bottom 0
		left 0
		right 30px
		top 0
		size(auto)

	&-box
		position relative
		top 100px
		left 0
		right 0
		background #fff
		width 500px
		padding 30px
		margin auto
		margin-bottom 100px

	&-btn-close
		position absolute
		top 0
		right 0
		size(30px)
		background #f66
		cursor pointer
		trans()



	&-title
		font-size 20px
		font-weight bold
		margin-bottom 20px