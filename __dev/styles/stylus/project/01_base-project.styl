open-sans()
	font-family: 'Open Sans', sans-serif;
roboto()
	font-family: 'Roboto', sans-serif;
pt-sans()
	font-family: 'PT Sans', sans-serif;
roboto_condensed()
	font-family: 'Roboto Condensed', sans-serif;

.open-sans
	open-sans()

.pt-sans
	pt-sans()
.roboto
	roboto()

.roboto_condensed
	roboto_condensed()

body
	background transparent
	pt-sans()
	border-box()
	padding-bottom 512px
html
	height 100%
main
	position relative
	overflow hidden

.container.__inner
	padding-top: 80px;
	position relative

.wrapper-content
	clear()

.button
	text-decoration: none;
	text-align: center;
	display: block;
	outline 0;
	border: 0
	cursor pointer
	vertical-align middle
	border-box()
	font-size 20px
	open-sans()
	font-weight bold
	line-height 54px
	width 100%
	height 54px
	background: #e51f1f;
	color: #fff;
	text-transform uppercase
	position relative
	trans()
	&:hover
		opacity 0.7
	&-more
		text-decoration: none;
		text-align: center;
		display: block;
		margin 0 auto
		outline 0;
		border: 0
		cursor pointer
		vertical-align middle
		border-box()
		font-size 20px
		roboto()
		font-weight bold
		line-height 54px
		width 262px
		height 54px
		background: #fff;
		color: #393939;
		text-transform uppercase
		position relative
		trans()
		&:hover
			opacity 0.7

	&-detail
		text-decoration: none;
		text-align: center;
		display: inline-block;
		outline 0;
		border: 0
		cursor pointer
		vertical-align middle
		border-box()
		font-size 20px
		open-sans()
		font-weight bold
		line-height 54px
		width 200px
		height 54px
		background: #e51f1f;
		color: #fff;
		position relative
		trans()
		&:hover
			opacity 0.7
		&.__brown
			text-transform uppercase
			background #582000
	&-info
		text-decoration: none;
		text-align: center;
		display: inline-block;
		outline 0;
		border: 0
		cursor pointer
		vertical-align middle
		border-box()
		font-size 14px
		open-sans()
		font-weight bold
		line-height 40px
		width 140px
		height 40px
		background: #fcf7f1;
		color: #582000;
		text-transform uppercase
		position relative
		trans()
		&:hover
			opacity 0.7
	&-add
		text-decoration: none;
		text-align: center;
		display: inline-block;
		outline 0;
		border: 0
		cursor pointer
		vertical-align middle
		border-box()
		font-size 14px
		open-sans()
		font-weight bold
		line-height 54px
		width 200px
		height 54px
		background: #f0f0f0;
		color: #393939;
		position relative
		trans()
		&:hover
			opacity 0.7





.falseLink
	display inline
	border-bottom 1px dashed #591E01
	text-decoration none!important
	color #591E01
	cursor pointer
	trans()
	&:hover, &:active
		opacity 0.7

.hr
	clear()
	display block
	size(auto, 0)
	border-bottom 1px dashed #b7b7b7
	margin 20px 0

img
	max-width 100%

.left-aside
	float left
	width 200px
	position relative
	z-index 2
.after-left-aside
	margin-left -230px
	width 100%
	float right
	.content
		margin-left 230px
		position relative
		&.__fixed
			max-width 768px
