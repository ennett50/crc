.main-text
	background images("bg/main-text.png") no-repeat
	background-size: cover;
	padding 40px 70px 80px
	margin-bottom 62px
	border-box()
	.container
		padding 0
		border-box()
		min-width: 850px
	&-logo
		text-align center
		margin-bottom 30px
	&-block
		padding 55px 0

		background rgba(255,255,255,0.7)
		font-size 16px
		pt-sans()
		color #333
		text-align justify
	&-desc
		display table
		padding 0 10px
		max-width 976px
		margin 0 auto
	&-item
		display table-cell
		padding 0 80px 0 10px
		width 480px
		border-box()
		@media screen and (max-width: 1245px)
			padding-right 20px
		& + .main-text-item
			border-left 1px solid #fff
			padding-left 80px
			padding-right 10px
			@media screen and (max-width: 1245px)
				padding-left 20px
