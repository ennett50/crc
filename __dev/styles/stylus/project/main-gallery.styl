.main-gallery
	position relative
	&-item
		float left
		left 0
		text-align center
	&-pager
		position absolute
		bottom 20px
		left 0
		width 100%
		text-align center
		@media screen and (max-width: 1245px)
			display none

	&-preview
		display inline-block
		vertical-align middle
		margin 0 8px
		width 110px
		height 78px
		overflow hidden
		position relative
		&:hover, &.active
			&:before
				background rgba(255,255,255,0)
				border-color #fff
		&:before
			position absolute
			border 3px solid transparent
			top 0
			left 0
			background rgba(255,255,255,0.5)
			width 100%
			height 100%
			content ''
			display block
			trans()
		img
			min-width 110px
			min-height 78px
	&-ctn
		position relative
		margin-bottom 20px
	img&-img
		display inline-block
	&-text
		color: #fff;
		left: 0;
		top: 0;
		text-align: center;
		position: absolute;
		width: 100%;
		padding-top: 110px;
		roboto()
	&-count-item
		font-size 19px
		margin-bottom 10px
		font-weight bold
	&-title
		font-weight 300
		font-size 60px
@media screen and (max-width: 1370px)
	.bx-wrapper .bx-next
		right 5%
	.bx-wrapper .bx-prev
		left 5%