.catalog
	position relative
	margin-bottom 50px
	&-ctn
		max-width 900px
	&-item
		float left
		width 33.33%
		position relative
		text-align center
		open-sans()
		font-size 16px
		padding-bottom: 20px;
		&:before
			position: absolute;
			content: '';
			width: auto;
			height: auto;
			left: -1px;
			top: -1px;
			bottom: 0;
			right: 0;
			border: 1px solid #f9f0e3;
			transition: all 0.2s;
			box-shadow: 0 0 0 rgba(0,0,0,0);
		&:hover
			z-index: 5;
			.slider-actions-title
				text-decoration underline
			&:before
				border-color: #e74545;
				box-shadow: 0 0 18px rgba(0,0,0,0.1);
	&-link
		display block
		content-center(100%,244px)
		margin-bottom 10px
		text-decoration none
		z-index 2
	&-persent
		position: absolute;
		top: 20px;
		left: 0;
		color: #fff;
		font-size: 30px;
		background: #e51f1f;
		padding: 2px 10px;
		z-index: 2;
		min-width: 88px;

		&:after
			content ''
			display block
			width: 0;
			position absolute
			top 0
			right -24px
			height: 0;
			border-style: solid;
			border-width: 45px 24px 0 0;
			border-color: #e51f1f transparent transparent transparent;
	&-type
		font-weight bold
		z-index 2
		position relative
	&-title
		text-decoration none
		z-index 2
		position relative
		display inline-block
		margin-bottom 15px
		_text-overflow(95%)
		&:hover
			text-decoration underline
	&-old-price
		text-decoration line-through
		color #515151
		font-size 14px
		font-weight 300
		z-index 2
		position relative
	&-new-price
		font-weight bold
		margin-bottom 5px
		color #582000
		z-index 2
		position relative
	&-kind
		position absolute
		top: 20px;
		z-index 3
		right 27px
		width 15px
		&-color
			display block
			height 15px
			text-decoration none
			trans()
			&:hover
				opacity 0.7
	&-size
		margin-bottom 10px
		font-size 12px;
		color #e2b474
		z-index 2
		position relative
		margin-top: -20px;
	&-activity
		display: block;
		position: relative;
		top: 0;
		text-align: center;
		width: auto;
		padding-top: 23px;
		text-transform uppercase
		open-sans()
		color #393939
		z-index 2

		&-link
			text-decoration none
			trans()
			display inline-block
			margin-bottom 10px
			&:hover
				color #ff0000
			&.__active
				color #e51f1f

	&.__list
		.catalog-activity
			width 200px
			position: absolute;
			top: 97px;
			right: 24px;
			text-align right

		.catalog-item
			text-align left
			display inline-block
			vertical-align top
			width 100%
			float none
			padding-bottom 0
		.catalog-link
			margin-right 20px
			size(285px, 192px)
			display inline-block
			margin-bottom 2px
			vertical-align top
		.catalog-kind
			right: inherit;
			left: 254px;
		.catalog-type
			display inline-block
			vertical-align top
			width 85px
			margin-top 20px
			margin-right 12px
		.catalog-info
			display inline-block
			vertical-align top
			margin-top 20px
			width: 170px;
			margin-right: 50px;
		.catalog-price
			display inline-block
			vertical-align top
			width 100px
			margin-top 20px
			text-align center
			margin-right 3px
		.button-info
			display inline-block
			vertical-align top
			margin-top 20px
		.catalog-title
			margin-bottom: 24px;
			white-space: inherit;
			text-align: left;