.ui-buttonset
	margin 0

.ui-slider
	size(100%, 2px)
	border 0
	border-radius 0
	background #cfcfcf
	padding 0
	border 0
	.ui-slider-range
		background #1b7fc5
		border-radius 0
		height 100%
	.ui-slider-handle
		size(6px, 10px)
		background images('icons/range-arrow.png') center bottom no-repeat
		margin-left -3px
		top 100%
		border 0
		border-radius 0

.ui-type-checkbox,
.ui-type-radio
	line-height 16px
	&,
	.ui-button-text
		border 0
		border-radius 0
		padding 0
		margin auto
		background transparent
		font-weight 400
		font-size 13px
		color #000
		text-align left
	.ui-button-text
		display inline-block
		vertical-align top
		max-width 100%
		padding-left 20px
		margin-left -12px
		padding-right 20px
		border-box()
		overflow hidden
		line-height 16px
		span
			display inline-block
			vertical-align middle
	&:before
		content ''
		display inline-block
		vertical-align top
		background-position center
		background-repeat no-repeat
		border-box()
		trans()
		margin-top 2px

.ui-type-checkbox
	&:before
		size(12px)
		border 1px solid #e9e9e9
		background-color #fff
		border-radius 2px
	&:hover
		&:before
			background-color #f2f2f2
	&.ui-state-active
		&:before
			background-color #1776cc
			border-color #1776cc
			background-image images('icons/checkbox-arrow.png')
			
.ui-type-radio
	&:before
		size(13px)
		border 1px solid #e9e9e9
		background-color #fff
		border-radius 50%
	&:hover
		&:before
			background-color #f2f2f2
	&.ui-state-active
		&:before
			background-color #fff
			background-image images('icons/radio-dot.png')

/*Custom select styling*/
/*button*/	
.ui-selectmenu-button
	color black
	font-weight normal
	vertical-align middle
.ui-selectmenu-button.ui-state-default
	border none
.ui-selectmenu-button span.ui-selectmenu-text
	border 1px solid #e9e9e9
.ui-selectmenu-button .ui-icon
	background-image:none;	
.ui-selectmenu-button .ui-selectmenu-text
	border 1px solid #e9e9e9
	font-size 14px
	background white
.ui-selectmenu-button span.ui-icon
	background url("../images/icons/black-down.png") no-repeat 0 0
	width 10px
	height 5px
	right 18px
	margin-top -2px
/*button hover*/
.ui-selectmenu-button.ui-state-hover
	background none
	outline none
.ui-selectmenu-button[aria-expanded="true"] .ui-icon.ui-icon-triangle-1-s
	background-position 0 -8px
/*menu*/
.ui-selectmenu-menu .ui-menu
	padding-bottom 0
.ui-selectmenu-menu .ui-menu-item
	padding 12px 0 10px 13px
	background white
	border 1px solid #e9e9e9
	border-bottom none
.ui-selectmenu-menu .ui-menu-item:hover
	background #f2f2f2
.ui-selectmenu-menu .ui-menu-item:first-child
	border-top none
.ui-state-focus, .ui-widget-content .ui-state-focus
	color black
	font-weight normal	
.ui-selectmenu-menu .ui-menu-item + .ui-menu-item
	border-top none
.ui-selectmenu-menu .ui-menu-item + .ui-menu-item:after
	content ""
	position absolute
	top 0
	left 10px
	right 10px
	height 1px
	background #e9e9e9
.ui-selectmenu-menu .ui-menu-item:hover + .ui-menu-item:after,
.ui-selectmenu-menu .ui-menu-item:hover:after
	background transparent	
.ui-selectmenu-menu .ui-state-focus, .ui-menu .ui-state-active
	margin 0
.ui-menu
	border none
	background none
	border-bottom 1px solid #e9e9e9