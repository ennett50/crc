.main-menu
	position relative
	font-size 15px
	opens-sans()
	text-transform uppercase
	@media screen and (max-width: 1245px)
		font-size 13px
	&-item
		display inline-block
		vertical-align middle
		margin-right 16px
		@media screen and (max-width: 1245px)
			margin-right 9px
	&-link
		text-decoration none
		font-weight bold
		letter-spacing -1px
		&.__active
			color #b3b3b3
		a&
			trans()
			&:hover
				color #b3b3b3
