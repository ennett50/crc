.main-search
	position relative
	max-width 800px
	margin 0 auto 20px
	&-text
		border 1px solid #818181
		padding 8px 15px
		width 100%
	&-btn
		background images('/icon/icon-search.png') no-repeat 50% 50% #393939
		width 42px
		height 34px
		cursor pointer
		position absolute
		top 3px
		right 3px
		line-height 34px
		trans()
		&:hover
			opacity 0.7
