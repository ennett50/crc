.header
	position relative
	background images('bg/pattern-header.png') repeat
	color #fff
	font-family: 'Open Sans', sans-serif;
	padding 4px 0 0
	font-size 15px
	z-index 1
	&-top-line
		background #797573
		padding 10px 0
	.left
		text-align left
	.right
		text-align right

	&-link
		display inline-block
		vertical-align middle
		margin-left 20px
		trans()
		text-transform uppercase
		text-decoration none
		&:hover
			color #b3b3b3
	&-basket
		display inline-block
		vertical-align middle
		font-weight bold
		text-transform uppercase
		text-decoration none
		span
			display inline-block
			vertical-align middle
		&-icon
			background #582000
			width 50px
			height 50px
			margin -10px 10px -10px 30px
			position relative
			&:before
				display block
				content ''
				sprite($s-icon-basket)
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				margin auto
	&-logo
		top -30px
		left 50%
		margin-left -117px
		content-center(250px,250px)
		position absolute
		background images('bg/pattern-header.png') repeat
		border-radius 50%
	&-bottom-line
		position relative
		padding 10px 0
	&-slogan
		letter-spacing: -1px;
		font-weight bold
		text-transform uppercase
		font-size 20px
		padding-top 20px
	&-phone
		font-size 20px
		margin-bottom 3px
		font-weight bold
		&:before
			content ''
			display inline-block
			vertical-align middle
			margin-right 1px
			sprite($s-icon-phone)
	& + container
		padding-top 20px