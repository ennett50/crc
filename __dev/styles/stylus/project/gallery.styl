.gallery
	position relative
	margin-bottom 40px
	&-item
		float left
		text-align center
		position relative
		left 0
	&-pager
		position relative
		padding-left: 5px;
	&-preview
		float left
		margin-right: 30px;
		margin-bottom 10px
		trans()
		border 1px solid transparent
		content-center(80px)
		&:hover, &.active
			opacity 0.7
			border 1px solid #e2b575
	.slider-actions-persent
		left 6px
		top: 13px;



.gallery-allowanse
	text-transform uppercase
	color #fff
	font-size 12px
	open-sans()
	display block
	position absolute
	top: 13px;
	left: 6px;
	background #393939
	width 110px
	height 22px
	line-height 22px
	text-align center
	& + .slider-actions-persent
		top 45px
	&:after
		display block
		content ''
		sprite($s-icon-double-arrow)
		position absolute
		right -5px
		top 0
