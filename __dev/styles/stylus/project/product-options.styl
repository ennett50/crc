.product-options
	position relative
	font-size 16px
	open-sans()
	&-item
		float left
		width 50%
		padding-left: 8px;
		border-box()
		padding-right 10px
		margin-bottom 34px
	&-title
		text-transform uppercase
		font-size 16px
		open-sans()
		font-weight bold
		margin-bottom 26px
	&-img
		content-center(100%, 148px)
		margin-bottom: 34px;
		img
			right inherit
	&-desc
		font-weight 300
		margin-bottom 15px
		max-width: 60%;

		&:after
			content ''
			display block
	&-result
		font-weight bold
		float right
		text-align right
		width 16%
	&-text
		float left
		width 84%
		border-box()
		padding-right 10px
