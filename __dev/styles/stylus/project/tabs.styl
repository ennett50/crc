.tabs
	position relative
	margin-bottom: 36px;
	&-item
		float left
		background #f0f0f0
		open-sans()
		font-size 18px
		margin-left 25px
		height 45px
		line-height 45px
		padding 0 15px
		text-decoration none
		position relative
		trans()
		@media screen and (max-width: 1100px)
			margin-left 0
		&:first-child
			margin-left 0
		&:hover, &.__current
			background #e51f1f
			color #fff
			&:after
				border-color: transparent transparent transparent #e51f1f;
		&:after
			top 0
			trans()
			position absolute
			display block
			content ''
			width: 0;
			right -25px
			height: 0;
			border-style: solid;
			border-width: 45px 0 0 25px;
			border-color: transparent transparent transparent #f0f0f0;
	&-ctn
		position relative
		margin-bottom 20px
		padding 0 20px
		[data-tabs-group]
			display none
			&.__current
				display block
